<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="White"/>
    </Style>
    <Style x:Key="GridStyle" BasedOn="{StaticResource WindowStyle}"/>
    <Style x:Key="MenuStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Menu.Background" Value="#FFF0F0F0"/>
        <Setter Property="Menu.Foreground" Value="Black"/>
    </Style>
    <Style x:Key="MenuItemStyle" BasedOn="{StaticResource MenuStyle}"/>
    <Style x:Key="ToolBarTrayStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="ToolBarTray.Background" Value="#FFEEF5FD"/>
    </Style>
    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource ToolBarTrayStyle}">
    </Style>
    <Style x:Key="RichTBStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="RichTextBox.Background" Value="White"/>
        <Setter Property="RichTextBox.Foreground" Value="Black"/>
        <Setter Property="RichTextBox.SelectionBrush" Value="#FF0078D7"/>
    </Style>
</ResourceDictionary>